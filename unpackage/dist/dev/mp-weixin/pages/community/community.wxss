
.community-container.data-v-a6ef5318 {
		flex: 1;
		background: #f5f5f5;
		position: relative;
}

	/* 固定头部 */
.header.data-v-a6ef5318 {
		padding: 20px;
		background-color: #ffffff;
		box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
		padding-top: calc(var(--status-bar-height) + 30px) ;
		position: relative;
		height: 40px;
}
.header-title.data-v-a6ef5318 {
		font-size: 18px;
		font-weight: bold;
		text-align: center;
		position: absolute;
		left: 50%;
		transform: translateX(-50%);
}

	/* 留出头部高度 */
.feed-list.data-v-a6ef5318 {
		flex: 1;
		margin: 10px;
		height: calc(100vh - 120px);
		width: calc(100vw - 20px);
}

	/* 帖子卡片样式 */
.post-card.data-v-a6ef5318 {
		background: #fff;
		padding: 12px 0px;
		border-radius: 8px;
		margin: 12px 0px;
		box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
}

	/* 头像和用户名 */
.post-header.data-v-a6ef5318 {
		display: flex;
		align-items: center;
		margin-bottom: 8px;
}
.avatar.data-v-a6ef5318 {
		width: 36px;
		height: 36px;
		border-radius: 18px;
		margin-right: 10px;
		margin-left: 10px;
}
.username.data-v-a6ef5318 {
		font-weight: bold;
		font-size: 15px;
}

	/* 帖子文字内容 */
.post-content.data-v-a6ef5318 {
		margin: 8px 0 10px 10px;
		line-height: 1.6;
		font-size: 15px;
}

	/* 图片区域 */
.post-images.data-v-a6ef5318 {
		display: flex;
		flex-wrap: wrap;
		gap: 6px;
		justify-content: flex-start;
		margin-top: 6px;
}
.image-wrapper.data-v-a6ef5318 {
		width: calc((100% - 12px) / 3);
		padding-bottom: calc((100% - 12px) / 3);
		/* 保持正方形 */
		position: relative;
		border-radius: 6px;
		overflow: hidden;
}
.post-image-fallback.data-v-a6ef5318 {
		position: absolute;
		width: 100%;
		height: 100%;
		object-fit: cover;
}

	/* 评论区域 */
.comments-section.data-v-a6ef5318 {
		margin-top: 10px;
		padding-top: 8px;
		border-top: 1px solid #f0f0f0;
}
.comment-item.data-v-a6ef5318 {
		margin-bottom: 8px;
		font-size: 14px;
		line-height: 1.5;
}
.reply-item.data-v-a6ef5318 {
		padding-left: 20px;
		margin-top: 4px;
		font-size: 13px;
		color: #666;
}
.reply-btn.data-v-a6ef5318 {
		color: #4b5bb4;
		margin-left: 8px;
		font-size: 13px;
}

	/* 操作按钮 */
.post-actions.data-v-a6ef5318 {
		display: flex;
		justify-content: space-between;
		margin-top: 10px;
		border-top: 1px solid #eee;
		padding-top: 10px;
}
.action.data-v-a6ef5318 {
		flex: 1;
		text-align: center;
		font-size: 15px;
}

	/* 添加按钮 */
.floating-add-btn.data-v-a6ef5318 {
		position: fixed;
		right: 20px;
		bottom: 40px;
		width: 50px;
		height: 50px;
		background-color: #4b5bb4;
		border-radius: 25px;
		display: flex;
		align-items: center;
		justify-content: center;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
		z-index: 20;
}
.add-btn-image.data-v-a6ef5318 {
		width: 30px;
		height: 30px;
}
