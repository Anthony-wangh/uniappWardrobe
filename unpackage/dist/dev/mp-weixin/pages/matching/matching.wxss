
.container.data-v-5d3d730d {
		width: 100vw;
		height: 100vh;
		display: flex;
		flex-direction: column;
		background-color: #f7f7f7;
}

	/* 顶部栏 */
.header-container.data-v-5d3d730d {
		width: 100%;
		padding: 12px 0px;
		background-color: #fff;
		box-shadow: 0px 4px 12rpx rgba(0, 0, 0, 0.05);
		padding-top: calc(var(--status-bar-height) + 30px);
}
.header.data-v-5d3d730d {
		display: flex;
		align-items: center;
		/* border-bottom: 1px solid #b0b0b0; */
		padding-bottom: 15px;
}
.title-text.data-v-5d3d730d {
		font-size: 18px;
		font-weight: bold;
		color: #333;
		margin-left: 20px;
}
.edit-container.data-v-5d3d730d {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: center;
		width: 100%;
}
.search-container.data-v-5d3d730d {
		border-radius: 8px;
		align-items: center;
		display: flex;
		flex-direction: row;
		box-shadow: 4px 4px 12rpx rgba(0, 0, 0, 0.05);
		border: 1px solid #e3e3e3;
		background-color: #f8f8f8;
		margin: 5px 20px;
		width: 100%;
}
.search-input.data-v-5d3d730d {
		padding: 8px 12px 8px 5px;
		font-size: 14px;
}
.search-btn.data-v-5d3d730d {
		width: 20px;
		height: 20px;
		margin-left: 10px;
}
.scroll-container.data-v-5d3d730d {
		flex: 1;
		padding: 16rpx;
		height: calc(100vh - 200px);
}
.outfits-grid.data-v-5d3d730d {
	  display: flex;
	  flex-wrap: wrap;
	  justify-content: flex-start;
	  gap: 4%;
}
.outfit-card.data-v-5d3d730d {
	  width: calc(46% - 20px); /* 一排2个，留空隙 */
	  background-color: #ffffff;
	  border-radius: 16rpx;
	  padding: 0px 10px;
	  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
	  display: flex;
	  flex-direction: column;
	  margin-bottom: 16rpx;
}
.thumbnail.data-v-5d3d730d{
		width: 100%;
		aspect-ratio: 1 / 1;
		object-fit: cover;
}
.outfit-icon.data-v-5d3d730d {
	  width: 100%;
	  height: 100%;
	  justify-items: center;
	  align-items: center;
}
.outfit-info.data-v-5d3d730d {
	  display: flex;
	  flex-direction: column;
	  justify-content: space-between;
	  margin-top: 12rpx;
}
.name.data-v-5d3d730d {
	  font-size: 16px;
	  margin-bottom: 6rpx;
}
.remark.data-v-5d3d730d,
	.time.data-v-5d3d730d {
	  font-size: 24rpx;
	  color: #666;
	  margin-bottom: 5px;
}
.floating-btn.data-v-5d3d730d {
		position: fixed;
		right: 20px;
		bottom: 40px;
		width: 50px;
		height: 50px;
		background-color: #ccd3ff;
		border-radius: 25px;
		display: flex;
		align-items: center;
		justify-content: center;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
}
.floating-btn-image.data-v-5d3d730d {
		width: 30px;
		height: 30px;
}
.empty.data-v-5d3d730d {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 30px 0;
}
.emptyIcon.data-v-5d3d730d {
		width: 150px;
		height: 150px;
		margin-bottom: 10px;
}
.empty-state-text.data-v-5d3d730d {
		color: #b1a5df;
		font-size: 14px;
}
