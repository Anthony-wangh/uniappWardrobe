.add-category-btn.data-v-9e425260 {
		width: 100%;
		height: 20px;
		justify-content: center;
		box-shadow: 0px -1px 2px rgba(0, 0, 0, 0.1);
		background: #f7f7f7;
		padding: 8px 0;
