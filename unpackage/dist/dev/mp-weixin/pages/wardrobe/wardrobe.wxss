	/* 右下角浮动按钮 */
.floating-btn.data-v-9e425260 {
		display: flex;
		flex-direction: column;
		position: fixed;

		width: 50px;
		height: 50px;
		right: 20px;
		bottom: 40px;
		background-color: #ccd3ff;
		border-radius: 25px;
		box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
		align-items: center;
		justify-content: center;
}
.floating-btn-image.data-v-9e425260 {
		width: 35px;
