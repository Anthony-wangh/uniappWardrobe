.clothes-image.data-v-9e425260 {
		width: 80%;
		height: 80px;
		border-radius: 10px;
		margin-bottom: 5px;
}

	/* 衣物时间 */
.clothes-time.data-v-9e425260 {
		font-size: 12px;
		color: #999;
		position: absolute;
		bottom: 5px;
		width: 100%;
		text-align: center;
}

	/* 衣物名称 */
.clothes-name.data-v-9e425260 {
		font-size: 14px;
		color: #333;
		margin-bottom: 5px;
