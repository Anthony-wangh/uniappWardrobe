	/* 错误提示 */
.error-msg.data-v-9e425260 {
		color: red;
		font-size: 14px;
		margin-bottom: 10px;
}

	/* 按钮区域 */
.modal-buttons.data-v-9e425260 {
		display: flex;
		justify-content: space-around;
		margin-top: 10px;
}

	/* 取消按钮 */
.cancel-btn.data-v-9e425260 {
		padding: 0px 20px;
		background: #d4d4d4;
		color: #333;
		border: none;
		border-radius: 5px;
		font-size: 16px;
		cursor: pointer;
}

	/* 确定按钮 */
.confirm-btn.data-v-9e425260 {
		padding: 0px 20px;
		background: #d0e183;
		color: white;
