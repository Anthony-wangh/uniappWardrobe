.modal.data-v-9e425260 {
		width: 80%;
		background: white;
		padding: 20px;
		border-radius: 10px;
		box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
		text-align: center;
		display: flex;
		flex-direction: column;
}

	/* 标题 */
.modal-title.data-v-9e425260 {
		font-size: 18px;
		font-weight: bold;
		color: #333;
		margin-bottom: 10px;
