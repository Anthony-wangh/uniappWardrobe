
	/* 全局容器 */
.container.data-v-9e425260 {
		display: flex;
		flex-direction: column;
		height: 100vh;
		background-color: #f9f9f9;
}

	/* 右下角浮动按钮 */
.floating-btn.data-v-9e425260 {
		position: fixed;
		right: 20px;
		bottom: 40px;
		/* 位于底部导航栏上方 */
		width: 50px;
		height: 50px;
		background: #ff9800;
		color: white;
		border-radius: 50%;
		text-align: center;
		line-height: 50px;
		font-size: 20px;
		box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
		border: none;
		cursor: pointer;
}

	/* 一级分类（季节） */
.category-level-1.data-v-9e425260 {
		display: flex;
		justify-content: space-around;
		padding: 12px 0;
		background-color: #fff;
		box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}
.season-item.data-v-9e425260 {
		padding: 10px 15px;
		color: #666;
		cursor: pointer;
		border-radius: 10px;
		transition: all 0.2s;
}
.season-item.active.data-v-9e425260 {
		color: #fff;
		font-weight: bold;
		background-color: #d0e183;
}

	/* 二级分类（横向滑动） */
.category-container.data-v-9e425260 {
		display: flex;
		align-items: center;
		padding: 10px;
		background-color: #fff;
		border-bottom: 1px solid #eee;
}
.category-level-2.data-v-9e425260 {
		flex-grow: 1;
		white-space: nowrap;
		overflow-x: auto;
}
.category-wrapper.data-v-9e425260 {
		display: flex;
}
.category-item.data-v-9e425260 {
		padding: 8px 15px;
		margin-right: 10px;
		border-radius: 5px;
		cursor: pointer;
		background-color: #eaeaea;
		color: #333;
		transition: all 0.2s;
		font-size: 14px;
}
.category-item.active.data-v-9e425260 {
		background-color: #d0e183;
		color: white;
		font-weight: bold;
}

	/* 添加分类按钮 */
.add-category-btn.data-v-9e425260 {
		width: 35px;
		height: 35px;
		line-height: 35px;
		color: #fff;
		border: none;
		background-color: #fff;
		color: white;
		border-radius: 10%;
		box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
		position: relative;
		right: 0;
		padding: 3px;
		margin-left: 10px;
}

	/* 空态页样式 */
.empty-state.data-v-9e425260 {
		flex: 1;
		flex-direction: column;
		margin: 30px;
		margin-top: 50px;
		display: flex;
		justify-content: center;
		align-items: center;
		text-align: center;
}
.emptyIcon.data-v-9e425260 {
		width: 100px;
		height: 90px;
		padding: 5px;
}
.empty-state-text.data-v-9e425260 {
		font-size: 15px;
		color: #c7c7c7;
}

	/* 衣物列表 */
.clothes-list.data-v-9e425260 {
		flex: 1;
}

	/* 每一行 */
.clothes-row.data-v-9e425260 {
		display: flex;
		justify-content: flex-start;
		margin-bottom: 10px;
}

	/* 衣物卡片 */
.clothes-item.data-v-9e425260 {
		width: 32%;
		margin: 1%;
		background-color: white;
		padding: 10px;
		border-radius: 10px;
		box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
		text-align: center;
		position: relative;
		transition: transform 0.2s ease-in-out;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		min-height: 120px;
}
.clothes-item.placeholder.data-v-9e425260 {
		visibility: hidden;
}

	/* 图片 */
.clothes-image.data-v-9e425260 {
		width: 70px;
		height: 70px;
		border-radius: 10px;
		margin-bottom: 5px;
}

	/* 衣物时间 */
.clothes-time.data-v-9e425260 {
		font-size: 12px;
		color: #999;
		position: absolute;
		bottom: 5px;
		width: 100%;
		text-align: center;
}

	/* 衣物名称 */
.clothes-name.data-v-9e425260 {
		font-size: 14px;
		color: #333;
		margin-bottom: 5px;
}

	/* 弹窗背景 */
.modal-mask.data-v-9e425260 {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.5);
		display: flex;
		justify-content: center;
		align-items: center;
}

	/* 弹窗内容 */
.modal.data-v-9e425260 {
		width: 80%;
		background: white;
		padding: 20px;
		border-radius: 10px;
		box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
		text-align: center;
		display: flex;
		flex-direction: column;
}

	/* 标题 */
.modal-title.data-v-9e425260 {
		font-size: 18px;
		font-weight: bold;
		color: #333;
		margin-bottom: 10px;
}

	/* 输入框 */
.modal-input.data-v-9e425260 {
		width: 90%;
		padding: 10px;
		margin: 10px 0;
		border: 1px solid #ddd;
		border-radius: 5px;
		font-size: 16px;
		text-align: center;
