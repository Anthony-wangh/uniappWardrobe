
.container.data-v-cfe86fb7 {
		display: flex;
		flex-direction: column;
		align-items: center;
		background-color: #f9f9f9;
		height: 100vh;
		padding: 10px;
}

	/* 套装搭配模块 */
.outfit-preview.data-v-cfe86fb7 {
		width: 100%;
		height: 320px;
		background-color: #fff;
		position: relative;
		border: 2px dashed #ccc;
		margin-top: 10px;
		border-radius: 10px;
		display: flex;
		justify-content: center;
		align-items: center;
		overflow: visible;
}

	/* 空白提示文字 */
.empty-text.data-v-cfe86fb7 {
		font-size: 16px;
		color: #aaa;
}

	/* 衣服卡片 */
.clothes-item.data-v-cfe86fb7 {
		position: absolute;
		z-index: 100;
		pointer-events: auto;
		width: 80px;
		height: 80px;
		display: flex;
		align-items: center;
		justify-content: center;
		/* transition: transform 0.2s ease-in-out; */
}

	/* 衣物图片 */
.clothes-image.data-v-cfe86fb7 {
		width: 100%;
		height: 100%;
		border-radius: 10px;
		box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
}


	/* 旋转按钮 */
.rotate-btn.data-v-cfe86fb7 {
		position: absolute;
		bottom: -12px;
		left: -12px;
		width: 24px;
		height: 24px;
		/* background-color: #ff9800; */
		border-radius: 50%;
		cursor: pointer;
		border: 1px solid #fff;
}

	/* 缩放按钮 */
.resize-btn.data-v-cfe86fb7 {
		position: absolute;
		bottom: -12px;
		right: -12px;
		width: 20px;
		height: 20px;
		/* background-color: #2196f3; */
		border-radius: 50%;
		cursor: pointer;
		border: 1px solid #fff;
}

	/* 删除按钮 */
.remove-btn.data-v-cfe86fb7 {
		position: absolute;
		top: -12px;
		right: -12px;
		width: 24px;
		height: 24px;
		background-color: red;
		color: white;
		border-radius: 50%;
		font-size: 14px;
		text-align: center;
		line-height: 24px;
		cursor: pointer;
		font-weight: bold;
		border: 2px solid #fff;
}

	/* 添加衣物按钮 */
.add-clothes-btn.data-v-cfe86fb7 {
		width: 90%;
		height: 45px;
		margin: 15px 0;
		background-color: #4caf50;
		color: white;
		font-size: 16px;
		text-align: center;
		line-height: 45px;
		border-radius: 10px;
		cursor: pointer;
		font-weight: bold;
		box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
}

	/* 套装详情 */
.details-section.data-v-cfe86fb7 {
		width: 90%;
		background: white;
		padding: 15px;
		border-radius: 10px;
		box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
}

	/* 输入行 */
.input-row.data-v-cfe86fb7 {
		display: flex;
		align-items: center;
		justify-content: space-between;
		margin-bottom: 12px;
}

	/* 输入框/选择框名称 */
.label.data-v-cfe86fb7 {
		font-size: 16px;
		color: #333;
		width: 30%;
		text-align: left;
}

	/* 输入框/选择框 */
.input-box.data-v-cfe86fb7 {
		width: 65%;
		height: 40px;
		padding: 5px;
		border: 1px solid #ddd;
		border-radius: 5px;
		font-size: 14px;
		text-align: center;
		background-color: #f7f7f7;
}

	/* 选择框样式 */
picker.input-box.data-v-cfe86fb7 {
		display: flex;
		align-items: center;
		justify-content: center;
}

	/* 保存按钮 */
.save-btn.data-v-cfe86fb7 {
		width: 100%;
		height: 45px;
		background-color: #ff9800;
		color: white;
		font-size: 16px;
		text-align: center;
		line-height: 45px;
		border-radius: 10px;
		margin-top: 10px;
		cursor: pointer;
		font-weight: bold;
		box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
}
.hidden-canvas.data-v-cfe86fb7 {
		position: absolute;
		top: -9999px;
		left: -9999px;
		width: 300px;
		height: 300px;
}
