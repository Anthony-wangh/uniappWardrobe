
.faq-container.data-v-efd317e1 {
	background-color: #f9f9f9;
	min-height: 100vh;
}

/* 顶部栏 */
.navbar.data-v-efd317e1 {
	display: flex;
	align-items: center;
	padding: 12px 20px;
	background-color: #fff;
	border-bottom: 1px solid #e5e5e5;
	
	padding-top: calc(var(--status-bar-height) + 40px);
}
.back-icon.data-v-efd317e1 {
	width: 24px;
	height: 24px;
	margin-right: 12px;
}
.title.data-v-efd317e1 {
	font-size: 18px;
	font-weight: bold;
	color: #333;
}

/* FAQ 列表 */
.faq-list.data-v-efd317e1 {
	padding: 20px;
}
.faq-item.data-v-efd317e1 {
	background-color: #fff;
	border-radius: 10px;
	margin-bottom: 12px;
	box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
	padding: 14px 16px;
	transition: all 0.3s ease;
}
.faq-question.data-v-efd317e1 {
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 16px;
	color: #333;
}
.arrow.data-v-efd317e1 {
	transition: transform 0.3s ease;
	color: #666;
}
.arrow.rotated.data-v-efd317e1 {
	transform: rotate(90deg);
}
.faq-answer.data-v-efd317e1 {
	margin-top: 10px;
	font-size: 14px;
	color: #666;
	line-height: 1.6;
}
